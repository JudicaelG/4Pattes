{% for animal in animalsOfUser %}

    <div class="bg-card-secondary shadow-xl">
        <section class="px-4 py-4">
            <h3>
            {% if animal.profilePhoto %}
                <img class="rounded-full w-24 h-24 mx-auto inline" src="{{asset('uploads/animals/profilephoto/' ~ animal.profilePhoto)}}" />
            {% else %}
                <img class="rounded-full w-24 h-24 mx-auto inline" src="{{asset('images/default/dog.JPG')}}" />  
            {% endif %}
                <span class="ml-4 font-bold inline">{{ animal.name }}</span>, {{ animal.breed_id.name }}</h3>
            <hr class="w-1/2 my-2">
            <h4 class="font-semibold">{% trans %}Anniversaire{% endtrans %} : </h4><p class="ml-2">{{animal.birthday|date("d/m/Y")}}</p>
            <h4 class="font-semibold">{% trans %}Poids{% endtrans %} : </h4><p class="ml-2">{{animal.weight}} Kg</p>
            {% if animal.sexe %}
            <h4 class="font-semibold">{% trans %}Sexe{% endtrans %} : </h4><p class="ml-2">{{animal.sexe}}</p>
            {% endif %}
            {% if animal.sterilized == false %}
                <h4 class="font-semibold">{% trans %}Stérilisé{% endtrans %} : </h4><p class="ml-2">Non</p>
            {% elseif  animal.sterilized == true %}
                <h4 class="font-semibold">{% trans %}Stérilisé{% endtrans %} : </h4><p class="ml-2">Oui</p>
            {% endif %}
            {% for vaccine in animal.vaccinated %}                
                {% if vaccine.next_recall != null %}
                    {% for vaccineId in vaccine.vaccine_id %}
                        <h4 class="font-semibold">{% trans %}Prochain vaccin {% endtrans %} {{ vaccineId.getName()}} : </h4><p class="ml-2"><span class="{{vaccine.color.name}}">{{vaccine.next_recall|date("d/m/Y")}}</span> ({{vaccine.last_date_injection|date("d/m/Y")}})</p>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </section>
        <a class="float-right bg-primary p-2 text-white mx-4 my-4" href="https://www.i-cad.fr/" target="_blank" button class="" >I-CAD</button></a>
        <a class="float-right bg-primary p-2 text-white mx-4 my-4" href="{{path('edit_animal', {id: animal.id})}}"><button class="" >{% trans %}Modifier{% endtrans %}</button></a>
        <a class="float-right bg-primary p-2 text-white mx-4 my-4" animal-id="{{animal.id}}" onclick="askDelete({{animal.id}})"><button class="" >{% trans %}Supprimer{% endtrans %}</button></a>
    </div>
{% endfor %}