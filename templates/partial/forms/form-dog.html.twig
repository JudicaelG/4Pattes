{{form_start(form)}}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-3.5">
        <div class="mx-2 my-2">                    
            <label class="block font-bold">{{field_label(form.name)|trans}}</label>                    
            <input name="{{field_name(form.name)}}" value="{{field_value(form.name)}}" class="block w-full px-2 py-2 rounded-lg bg-white shadow-lg text-gray-700 
            focus:border-primary focus:ring-1 focus:ring-primary focus:outline-none" required>
            <span class="error-form">{{ form_errors(form.name) }}</span>
        </div>
        <div class="mx-2 my-2">
            <label class="block font-bold">{{field_label(form.birthday)|trans}}</label>
            <input type="date" name="{{field_name(form.birthday)}}" value="{{field_value(form.birthday)}}" class="block w-full px-2 py-2 rounded-lg bg-white shadow-lg text-gray-700 
            focus:border-primary focus:ring-1 focus:ring-primary focus:outline-none" required>
            <span class="error-form">{{ form_errors(form.birthday) }}</span>
        </div>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-3">
        <div class="mx-2 my-2">
            <label class="block font-bold">{{field_label(form.weight)|trans}}</label>
            <input type="number" step="0.1" name="{{field_name(form.weight)}}" value="{{field_value(form.weight)}}" class="block w-full px-2 py-2 rounded-lg bg-white shadow-lg text-gray-700 
                focus:border-primary focus:ring-1 focus:ring-primary focus:outline-none" required>
            <span class="error-form">{{ form_errors(form.weight) }}</span>
        </div>
        <div class="mx-2 my-2">
            <label class="block font-bold">{{field_label(form.sexe)|trans}}</label>
            {{form_widget(form.sexe)}}            
            <span class="error-form">{{ form_errors(form.sexe) }}</span>
        </div>
        <div class="mx-2 my-2">
            <label class="block font-bold">{{field_label(form.sterilized)|trans}}</label>
            {{form_widget(form.sterilized)}}  
            <span class="error-form">{{ form_errors(form.sterilized) }}</span>
        </div>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-2">
        <div class="mx-2 my-2">
            <label class="block font-bold">{{field_label(form.breed_id)|trans}}</label>
            {{form_widget(form.breed_id)}}  
            <span class="error-form">{{ form_errors(form.breed_id) }}</span>
        </div>
        <div class="mx-2 my-2">
            <label class="block font-bold">{{field_label(form.profilePhoto)|trans}}</label>
            <input type="file" name="{{field_name(form.profilePhoto)}}" value="{{field_value(form.profilePhoto)}}" class="block w-full px-2 py-2">
            <span class="error-form">{{ form_errors(form.profilePhoto) }}</span>
        </div>    
    </div>
    <div class="mx-2 my-2 ">
        <h3 class="block mt-6 mb-3 font-bold">{% trans %}Vaccins{% endtrans %}</h3>
        <div class="grid grid-cols-4 gap-2.5">
            {% for vaccinated in form.vaccinateds %}
                <div class="">
                    {% for vaccine in vaccinated.vars.value.getVaccineId() %}
                        {{ form_label(form.name, vaccine.name, {
                            'label_attr': {'class': 'block font-bold'}
                        }) }}
                    {% endfor %}
                    {{ form_widget(vaccinated) }}
                    <span class="error-form">{{ form_errors(vaccinated) }}</span>
                </div>
                {% endfor %}
        </div>
    </div>
    <div class="mx-2 my-2">                 
        {% if form.add_veterinary is defined %}
            <h3 class="block mt-6 mb-3 font-bold">{% trans %}Ajouter un vétérinaire{% endtrans %}</h3>             
            <div class="grid grid-cols-2 gap-2.5">
                <div class="col-span-2">
                    <label class="block font-bold">{{field_label(form.add_veterinary.name)|trans}}</label>
                    <input type="text" name="{{field_name(form.add_veterinary.name)}}" value="{{field_value(form.add_veterinary.name)}}" class="block w-full px-2 py-2 rounded-lg bg-white shadow-lg text-gray-700 
                        focus:border-primary focus:ring-1 focus:ring-primary focus:outline-none">
                    <span class="error-form">{{ form_errors(form.add_veterinary.name) }}</span>
                </div>
                <div class="col-span-2">
                    <label class="block font-bold">{{field_label(form.add_veterinary.adress)|trans}}</label>
                    <input type="text" name="{{field_name(form.add_veterinary.adress)}}" value="{{field_value(form.add_veterinary.adress)}}" class="block w-full px-2 py-2 rounded-lg bg-white shadow-lg text-gray-700 
                        focus:border-primary focus:ring-1 focus:ring-primary focus:outline-none">
                    <span class="error-form">{{ form_errors(form.add_veterinary.adress) }}</span>
                </div>
                <div class="">
                    <label class="block font-bold">{{field_label(form.add_veterinary.postalCode)|trans}}</label>
                    <input type="number" name="{{field_name(form.add_veterinary.postalCode)}}" value="{{field_value(form.add_veterinary.postalCode)}}" class="block w-full px-2 py-2 rounded-lg bg-white shadow-lg text-gray-700 
                        focus:border-primary focus:ring-1 focus:ring-primary focus:outline-none">
                    <span class="error-form">{{ form_errors(form.add_veterinary.postalCode) }}</span>
                </div>
                <div class="">
                    <label class="block font-bold">{{field_label(form.add_veterinary.city)|trans}}</label>
                    <input type="text" name="{{field_name(form.add_veterinary.city)}}" value="{{field_value(form.add_veterinary.city)}}" class="block w-full px-2 py-2 rounded-lg bg-white shadow-lg text-gray-700 
                        focus:border-primary focus:ring-1 focus:ring-primary focus:outline-none">
                    <span class="error-form">{{ form_errors(form.add_veterinary.city) }}</span>
                </div>
                <div class="">
                    <label class="block font-bold">{{field_label(form.add_veterinary.phone)|trans}}</label>
                    <input type="tel" name="{{field_name(form.add_veterinary.phone)}}" value="{{field_value(form.add_veterinary.phone)}}" class="block w-full px-2 py-2 rounded-lg bg-white shadow-lg text-gray-700 
                        focus:border-primary focus:ring-1 focus:ring-primary focus:outline-none">
                    <span class="error-form">{{ form_errors(form.add_veterinary.phone) }}</span>
                </div>
            </div>                
        {% else %}
            <div>
                <label class="block font-bold">{{field_label(form.veterinary)|trans}}</label>
                {{form_widget(form.veterinary)}}
                <span class="error-form">{{ form_errors(form.veterinary) }}</span>
            </div>
        {% endif %}
    </div>
    <div class="my-2 mx-2 float-right">
        <button type="submit" id="{{field_label(form.save)}}" name="{{field_name(form.save)}}" class="bg-primary px-4 py-3 rounded-full focus:border-primary focus:ring-1 focus:ring-primary focus:outline-none text-white min-w-11">
            {{field_label(form.save)}}
        </button>
        {% if field_label(form.save) == 'Modifier' %}
        <a href="{{path('animal')}}"/><button type="button" class="bg-primary px-4 py-3 rounded-full focus:border-primary focus:ring-1 focus:ring-primary focus:outline-none text-white min-w-11">
            Annuler
        </button>
        </a>
        {% endif %}
    </div>
        {{form_rest(form)}}
{{form_end(form)}}